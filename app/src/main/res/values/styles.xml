<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressWhite" parent="Widget.AppCompat.ProgressBar">

    </style>

    <style name="YellowButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="editTextLogin.Number" parent="@style/editTextLogin">
        <item name="android:inputType">number</item>
    </style>
    <style name="editTextLogin.Email" parent="@style/editTextLogin">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="editTextLogin.Password" parent="@style/editTextLogin">
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="editTextLogin">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/IDS_STR_ROBOTO_REGULAR</item>
    </style>

    <style name="editTextLogin.PersonType" parent="@style/editTextLogin">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style  name="textBoxThemeLogin">
        <item name="android:textColorHint" tools:ignore="NewApi">@color/text_hint_color</item>
        <item name="colorControlNormal">@color/cursor_control_normal</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

</resources>
